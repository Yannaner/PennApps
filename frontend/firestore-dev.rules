rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Temporary development rules - more permissive for testing
    // TODO: Replace with production rules once testing is complete
    
    // Allow authenticated users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write transactions
    // More permissive for development - allows all authenticated users to read/write
    match /transactions/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Alternative: If you want to allow unauthenticated access for development only
    // WARNING: Remove this for production!
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}