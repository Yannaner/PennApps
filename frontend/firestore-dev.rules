rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - more permissive for testing
    
    // Allow authenticated users to read all user documents and write their own
    match /users/{userId} {
      // Allow authenticated users to read any user document (needed for finding recipients by email)
      allow read: if request.auth != null;
      // Users can only write/update their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write all transactions
    match /transactions/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}